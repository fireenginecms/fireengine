# FireEngine Runtime Configuration
# Copy this to .env in the examples directory and update with your values

# ================================================
# REQUIRED VARIABLES
# ================================================

# Installation Configuration
FIREENGINE_OWNER_EMAIL=owner@yourdomain.com

# Firebase Configuration
# Get these from your Firebase project settings > Service accounts
FIREENGINE_FIREBASE_PROJECT_ID=your-project-id
FIREENGINE_FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREENGINE_FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com

# ================================================
# OPTIONAL VARIABLES
# ================================================

# Server Configuration
# FIREENGINE_PORT=3000

# Database Configuration
# FIREENGINE_FIRESTORE_DATABASE_ID=(default)


# Security & Access
# Set to true to use Firebase security rules instead of role-based permissions
# FIREENGINE_USE_FIRESTORE_ACCESS_RULES=false

# Google Maps Integration
# FIREENGINE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# FIREENGINE_GOOGLE_MAPS_OPTIONS={"center":{"lat":59.9111,"lng":10.7535},"zoom":10}

# Content Management
# JSON array of collection paths to ignore during auto-detection
# FIREENGINE_IGNORE_COLLECTIONS=["_internal", "temp"]

# Schema Overrides (JSON object with schema customizations)
# FIREENGINE_SCHEMA_OVERRIDES={"users":{"title":"User Management","fields":[{"name":"email","required":true}]}}


# File Storage
# Maximum file upload size (supports units: "1GB", "500MB", "100KB")
# FIREENGINE_STORAGE_MAX_UPLOAD_SIZE=5GB

# ================================================
# RUNTIME ENVIRONMENT
# ================================================
# Set to production when deploying
NODE_ENV=production